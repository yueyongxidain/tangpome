/* pages/audioPlay/audioPlay.wxss *//* pages/childrenSong/childrenSong.wxss */

.container {
  height: 100%;
  overflow: hidden;
}

.bg {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 100vh;
  filter: blur(50rpx);
}

.bg-gray {
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(54, 43, 41, 0.1);
}

.rotate-disk-container {
  position: absolute;
  top: 0rpx;
  height: 80%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.rotate-disk {
  width: 600rpx;
  height: 600rpx;
  border-radius: 600rpx;
  overflow: hidden;
  border: 20rpx solid rgba(54, 43, 41, 0.2);
}

.poster {
  width: 600rpx;
  height: 600rpx;
}

.rotate-360 {
  animation: rotate 10s linear infinite;
}

.rotate-360-paused {
  animation: rotate 10s linear infinite;
  animation-play-state: paused;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.slider-container {
  position: absolute;
  bottom: 240rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.slider-time {
  font-size: 32rpx;
  display: block;
  width: 19%;
  text-align: center;
  line-height: 18px;
  color: #fff;
}

.wx-slider-handle {
  width: 18px !important;
  height: 18px !important;
  top: 5px !important;
}

.operation-container {
  position: absolute;
  bottom: 60rpx;
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.operation-icon {
}

.icon-prev {
  width: 80rpx;
  height: 80rpx;
}

.icon-play {
  margin: 0 40rpx;
  width: 120rpx;
  height: 120rpx;
}

.icon-pause {
  margin: 0 40rpx;
  width: 120rpx;
  height: 120rpx;
}

.icon-next {
  width: 80rpx;
  height: 80rpx;
}

.icon-circle {
  width: 80rpx;
  height: 80rpx;
}

.icon-list {
  width: 80rpx;
  height: 80rpx;
}

.childrenSongName {
  position: absolute;
  bottom: 300rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #ccc;
}

.list {
  position: absolute;
  bottom: 0;
  height: 60%;
  width: 100%;
  color: #fff;
  background-color: rgba(54, 43, 41, 0.6);
}

.list-one {
  height: 80rpx;
  display: flex;
  padding: 0 30rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.list-one-poster {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.list-one-right {
  margin: 0 0 0 30rpx;
}

.list-one-choose {
  background-color: rgba(209, 212, 24, 0.6);
}

.list-index {
  display: block;
  width: 60rpx;
  height: 60rpx;
  background-color: mediumvioletred;
  text-align: center;
  border-radius: 60rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}
