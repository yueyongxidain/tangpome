/**index.wxss**/

.index-slide {
  height: 520rpx;
  text-align: center;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.index-slide-item {
  width: 400rpx;
  height: 500rpx;
  overflow: hidden;
  border-radius: 20rpx;
}

.slide-image {
  width: 400rpx;
  height: 500rpx;
  box-shadow: 0rpx 8rpx 5rpx #888;
}

.menu {
  margin: 15rpx;
  text-align: center;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}

.menu-item {
  margin-right: 30rpx;
  margin-left: 30rpx;
  height: 200rpx;
}

.menu-item-image {
  width: 128rpx;
  border-radius: 50%;
  box-shadow: 4px 4px 10px #ccc;
  height: 128rpx;
}

.menu-item-name {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 26rpx;
}

.module-title {
  margin:24rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 34rpx;
  font-weight: 500
}
